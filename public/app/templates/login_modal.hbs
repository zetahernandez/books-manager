<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        {{#if isSignUp}}
        <h4 class="modal-title">Sign Up</h4>
        {{else}}
        <h4 class="modal-title">Sign In</h4>
        {{/if}}
      </div>
      <div class="modal-body">
        <span id="myGoogleButton">

        </span>       

        <form role="form">
         {{#if isSignUp}}
         <div class="form-group">
          <label for="inputName">Name</label>
          {{input id="inputName" type="text" value=name size="50" placeholder="Confirm Password" class="form-control"}}
        </div>
        <div class="form-group">
          <label for="inputUsername">Username</label>
          {{input id="inputUsername" type="text" value=username size="50" placeholder="Username" class="form-control"}}
        </div>
        {{/if}}
        <div class="form-group">
          <label for="inputEmail">Email</label>
          {{input id="inputEmail" type="text" value=email size="50" placeholder="Email" class="form-control"}}

        </div>
        <div class="form-group">
          <label for="inputPassword">Password</label>
          {{input id="inputPassword" type="password" value=password size="50" placeholder="Password" class="form-control"}}
        </div>
        {{#if isSignUp}}
        <div class="form-group">
          <label for="inputConfirmPassword">Confirm Password</label>
          {{input id="inputConfirmPassword" type="password" value=confirmPassword size="50" placeholder="Confirm Password" class="form-control"}}
        </div>
        {{/if}}
      </form>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      {{#if isSignUp}}
      <button type="button" class="btn btn-primary"{{action "signUp"}}>Sign Up</button>
      {{else}}
      <button type="button" class="btn btn-primary"{{action "signIn"}}>Sign In</button>
      {{/if}}
    </div>
  </div>
</div>
</div>